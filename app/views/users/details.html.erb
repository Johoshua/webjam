<% @page_title = "Join the Jammers - register a Webjam account" %>
<% @body_class = "register" %>

<% content_for :head do %>
  <%= javascript_include_tag 'openid-register' %>
<% end %>

<h1>so you wanna <strong>join Webjam?</strong></h1>

<p>Successfully verified OpenID URL: <strong><%=h @identity_url.url %></strong></p>

<p>To complete the registration process, give us some of your deets.</p>

<%= error_messages_for :user %>
<% form_for :user, :url => create_users_path, :id => 'register' do |f| -%>
  <fieldset>
  <label for="user_nick_name">
      <span>Nick name:</span> 
      <%= f.text_field :nick_name %> 
      <span class="note">(what you want to be known as)</span>
  </label>
  <label for="user_full_name">
    <span>Full name:</span>
    <%= f.text_field :full_name %> 
    <span class="note">(what name to put down on the door, who to give a prize to, etc)</span>
  </label>
  <label for="user_email">
    <span>Email:</span>     
    <%= f.text_field :email %>     
    <span class="note">(verification, announcements, etc)</span>
  </label>
  </fieldset>
  <%= submit_tag 'Register', :class => "submit" %>
<% end %>
