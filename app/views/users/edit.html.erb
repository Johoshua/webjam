<% @page_title = "Edit your profile" %>

<h2>Edit your profile</h2>

<%= flash_notice %>

<%= render :partial => 'shared/new_mugshot' %>

<h3>Profile Details</h3>

<% accessible_form_for :user, @user, :url => update_profile_details_current_user_path, :html => {:method => :put} do |f| %>
<p>
  <%= f.label :nick_name %>
  <%= f.text_field :nick_name %>
</p>
  <p>
    <%= f.label :full_name %>
    <%= f.text_field :full_name %>
  </p>
  <p>
    <%= f.label :website_name %>
    <%= f.text_field :website_name %>
  </p>
  <p>
    <%= f.label :website_url %>
    <%= f.text_field :website_url %>
  </p>
  <%= submit_tag 'Save profile details' %>
<% end %>

