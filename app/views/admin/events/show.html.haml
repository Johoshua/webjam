- @section = :events
- @page_title = "Event: #{h(@event.name)}"


- content_for :other_content do
  %ul
    %li= link_to "Edit", edit_admin_event_path(@event)
    %li= button_to "Delete", admin_event_path(@event), :method => :delete, :confirm => "Yo sure?"

%h1
  Event:
  =h @event.name

%p
  %strong
    Permalink:
  = link_to event_path(@event), event_path(@event)

%p
  %strong
    Name:
  = @event.name

%p
  %strong
    Tag:
  = @event.tag

%p
  %strong
    Held At:
  = @event.held_at

%p
  %strong
    Location:
  = @event.location
  
%p
  %strong
    Timezone:
  = @event.timezone

%p
  %strong
    RSVP limit:
  = @event.rsvp_limit

%p
  %strong
    Hype (used on homepage and event page):
  =h @event.hype

%p
  %strong
    Published:
  = @event.published_at || "Not yet"